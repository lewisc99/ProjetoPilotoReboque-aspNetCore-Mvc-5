@model IEnumerable<ProjetoPilotoReboque.Models.FormularioAcionamento>



<p>
    <a asp-action="Create" class="btn btn-default">Novo Acionamento</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.ContratoNumero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClienteNomeCompleto);
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Veiculo.Placa);
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDoAcionamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ContratoNumero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClienteNomeCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Veiculo.Placa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataDoAcionamento)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>