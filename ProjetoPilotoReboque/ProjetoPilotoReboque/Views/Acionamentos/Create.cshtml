            </div>
            <div class="form-group">
                <label asp-for="Fornecedor" class="control-label"></label>
                <input asp-for="Fornecedor" class="form-control" />
                <span asp-validation-for="Fornecedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDoAcionamento" class="control-label"></label>
                <input asp-for="DataDoAcionamento" class="form-control" />
                <span asp-validation-for="DataDoAcionamento" class="text-danger"></span>
            </div>
