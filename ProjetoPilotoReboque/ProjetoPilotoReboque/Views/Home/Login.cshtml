@model ProjetoPilotoReboque.Models.Login.ColaboradorLogin

@{ //Layou = "_la
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Login";
}




<br/>
<br />
<h2>@ViewData["Title"] -  Colaborador Localiza</h2>
<br />

<div class="row">
    <form asp-action="Login">
        <div class="form-group">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" class="form-control" id="email" placeholder="adicione um  E-mail">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Senha" class="control-label">Password</label>
            <input type="password" asp-for="Senha" class="form-control" id="senha" placeholder="Adicione uma senha">

            <span asp-validation-for="Senha" class="text-danger"></span>

            <input asp-for="Id" type="hidden" />
            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-success">Login</button>
            </div>
        </div>

    </form>
    <div class="form-group">
        <p class="text-danger">@ViewBag.Mensagem</p>
    </div>

</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
